<h1>Users</h1>

<div id="friend-lookup" class="friend-lookup-container">
  <%= form_tag search_friends_path, remote: true, method: :get, id: "friend-lookup-form" do %>
    <div class="form-group row no-padding text-center">
      <div class="input-group">
        <%= text_field_tag :search_param, params[:search_param], placeholder: "Enter name or email", autofocus: true, class: "form-control search-box" %>
        <span class="input-group-btn">
          <%= button_tag(type: :submit, class: "btn btn-success btn-large") do %>
            <span class="glyphicon glyphicon-search" aria-hidden="true"></span> Search
          <% end %>
        </span>
      </div><!-- /input-group -->
    </div><!-- /.col-lg-6 -->
  <% end %>
</div>

<div id="results">
  <%= render 'friends/result' %>
</div>
